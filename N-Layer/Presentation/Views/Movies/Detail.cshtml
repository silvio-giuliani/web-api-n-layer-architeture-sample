@model Presentation.Models.MoviesModel

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Summary</th>
        <th>Year Released</th>
    </tr>
    @if (Model != null)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.YearReleased)
            </td>
        </tr>
    }
    <tr>
        <td colspan="4">@Html.ActionLink("Back", "Index", "Movies", null, null)</td>
    </tr>
</table>



